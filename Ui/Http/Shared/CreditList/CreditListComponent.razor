
<div>
    <ScrollContainer>
        <ScrollContent>
            <div class="scrollable-list">
                @if (ListToDisplay.GetType() == typeof(List<Cast>))
                {
                    @foreach (Cast item in @ListToDisplay)
                    {
                        <div class="scrollable-list-item">
                            <img src="https://image.tmdb.org/t/p/w400/@item.ProfilePath" alt="Poster" class="fit-parent"/>
                            <p class="text" style="color: #e8e8e8;">@item.OriginalName</p>
                            <p class="text" style="color: #585858;">@item.Character</p>
                        </div>
                    }
                }
                else
                {
                    @foreach (Crew item in @ListToDisplay)
                    {
                        <div class="scrollable-list-item">
                            <img src="https://image.tmdb.org/t/p/w400/@item.ProfilePath" alt="Poster" class="fit-parent"/>
                            <p class="text" style="color: #e8e8e8;">@item.OriginalName</p>
                        </div>
                    }
                }
            </div>
        </ScrollContent>
    </ScrollContainer>
</div>

@code {

    [Parameter]
    private string Title { get; set; }

    [Parameter]
    private List<Object> ListToDisplay { get; set; }
}