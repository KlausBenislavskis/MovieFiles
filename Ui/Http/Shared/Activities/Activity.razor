@using MovieFiles.Core.Models
@using MovieFiles.Core.Models.Activity

@switch (BaseAct)
{
    case RatingActivity ratingActivity:
        <RatingActivityComponent Activity="ratingActivity" />
        break;
    case CommentActivity commentActivity:
        <CommentActivityComponent Activity="commentActivity" />
        break;
    // Add more case statements for other activity types
    default:
        break;
}

@code {
    [Parameter]
    public BaseActivity BaseAct { get; set; }
}
